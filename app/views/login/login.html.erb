<ul class="nav justify-content-end">
  <li class="nav-item">
    <button type="button" href="panel/panel" class="btn btn-light">About us</button>
  </li>
</ul>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-auto col-sm-auto">
      <%= image_tag("public/logo.jpg", style: "width:150px;")%>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-md-4 col-sm-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Login</h5>
          <%= form_tag("panel/panel", method: "post") do %>
            <div class="form-group">
              <%= label_tag(:inputID, "Username:") %>
              <%= text_field(:inputID, :inputID,  class: 'form-control') %>
              <%= label_tag(:inputID, "Password:") %>
              <%= text_field(:inputPass, :inputPass,  class: 'form-control', type: 'password') %>
              <small id="emailHelp" class="form-text text-muted">Forgot your password?</small>
            </div>
            <div class="form-group">
              <%= button_tag(:'Sign in', class:'form-control btn btn-success') %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
